{
  "name": "mgamal/paymob-laravel",
  "description": "Paymob API with Laravel",
  "license": "MIT",
  "authors": [
    {
      "name": "Mohamed Gamal",
      "email": "mg.dev1992@gmail.com"
    }
  ],
  "scripts": {
    "test": "./vendor/bin/phpunit --testdox",
    "check-style": "vendor/bin/php-cs-fixer fix src/ --dry-run --allow-risky=yes --format=txt --verbose"
  },
  "autoload": {
    "psr-4": {
      "MG\\Paymob\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^7.2.5|^8.0",
    "friendsofphp/php-cs-fixer": "^3.4",
    "guzzlehttp/guzzle": "^7.4",
    "laravel/framework": ">=6.20"
  },
  "require-dev": {
    "orchestra/testbench": "^4.8",
    "vimeo/psalm": "^4.30"
  },
  "extra": {
    "laravel": {
      "providers": [
        "MG\\Paymob\\PaymobServiceProvider"
      ]
    }
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {},
    "platform": {
      "php": "7.2.5"
    }
  }
}
